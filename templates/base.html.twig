<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Yoda ChatBot{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="main.css">
        {% endblock %}
    </head>
    <body onload="initConversation()">
        {% block body %}
            <input id="conv-hist" type="hidden" value="{{ history }}">
            <div class="main-frame">
                <ul class="conv-frame">
                </ul>
                <div class="inp-frame">
                    <span class="write-span">Yoda is writing...</span>
                    </label><input id="message-inp" type="text">
                    <button id="submit-btn" onclick="submitForm()">SEND</button>
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src="js/jquery-3.5.1.min.js"></script>
            <script src="js/main.js"></script>
        {% endblock %}
    </body>
</html>